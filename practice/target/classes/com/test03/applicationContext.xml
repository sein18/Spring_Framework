<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="banana" class="com.test03.MessageBeanImpl"/>

<bean id="apple" class="com.test03.MessageBeanImpl">
	<constructor-arg><value>apple</value></constructor-arg>
	<constructor-arg><value>20000</value></constructor-arg>
</bean>
<bean id="melon" class="com.test03.MessageBeanImpl">
	<constructor-arg index="0" value="melon"></constructor-arg>
	<constructor-arg index="1" value="3000"></constructor-arg>
</bean>
</beans>
